<!DOCTYPE block SYSTEM "../dtds/blockLibrary.dtd">
<!--
    This Block represents the definition portion of a Report Writer Unit.
--> 
<block name="RWSelectorDef" inherits="RWUnitDef">
    <definition>
        <!-- Control Type. See c.m.webapi.EnumDSSXMLRWControlType -->
        <property name="ct" type="String" />

        <!-- Control key context -->
        <property name="ck" type="String" />
         
        <!-- Control key -->
        <property name="ckey" type="String" />

        <!-- Control Style. See c.m.w.o.rw.EnumRWControlStyle for details --> 
        <property name="style" type="Integer" />

        <!-- Control Orientation Vertical ? -->
        <property name="horiz" type="Boolean" />

        <!-- Can Multi Select ? --> 
        <property name="multi" type="Boolean" />

        <!-- Width Mode. com.microstrategy.web.objects.rw.EnumRWHeightWidthMode --> 
        <property name="wm" type="Integer" />

        <!-- Height Mode com.microstrategy.web.objects.rw.EnumRWHeightWidthMode --> 
        <property name="hm" type="Integer" />

        <!-- Item Width Mode com.microstrategy.web.objects.rw.EnumRWItemWidthMode --> 
        <property name="iwm" type="Integer" />

        <!-- Control Target Keys. While a list would be more generic, the fact is that client side should need this list ONLY to send it back when selection is changed.   -->
        <property name="tks" type="String" />
		
		<property name="ssc" type="String" />
		
		<property name="sstyle" type="Integer" />
		
		<!-- This property stores an array of custom group by nodes -->
		<property name="cgb" type="Block"/>
        
        <!-- This property stores the title string -->
        <property name="ttl" type="String" />
        
        <!-- This property stores the selection mode -->
        <property name="include" type="Boolean" />
        
        <!-- Indicates that a panel selector should appear as docked to the panel stack (for mobile). -->
        <property name="dk" type="Boolean" />
        
        <!-- This is the value of the FormattingView WindowState property.
             0 == Normal, 1 == Minimized, 2 == Maximized.
        -->
        <property name="ds" type="Integer" />   
        
        <!-- Control Sub Type. com.microstrategy.web.objects.rw.EnumWebControlSubType -->
        <property name="subTp" type="Integer" />     
        
        <!-- This property stores the data source of the selector -->
        <property name="dsrc" type="String" />   
        
        <!-- This property stores the data filter mode of the selector -->
        <property name="dfm" type="Integer" />   

        <!-- source object id 
            optional, only used for mertic condition selector and UC on dataset selector -->
        <property name="srcid" type="String" />

        <!-- source object type
            optional, only used for mertic condition selector-->
        <property name="srct" type="Integer" /> 
        
        <!-- the flag indicate whether the element list need search on server by other request; -->
        <property name="sos" type="Boolean" />                  
        
        <!-- This property stores the dataset id -->
        <property name="dsid" type="String" />     
        
        <!-- Form ID for search selector -->
        <property name="sfid" type="String" />     
        
        <!-- Form data type -->
        <property name="sfdt" type="Integer" />     
        
        <!-- Show all option (TQMS 536595) -->
        <property name="showall" type="Boolean" />     
        
        <!-- Show Element Count -->
        <property name="sec" type="Boolean" />
    </definition> 
</block>
