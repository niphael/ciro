<!DOCTYPE block SYSTEM "../../../dtds/blockLibrary.dtd">
<!--
    This Block contains properties for Metric Properties.
--> 
<block name="MetricProperties">
  <definition>
    <!-- All children join property -->
    <property name="acj" type="Integer" />
    
    <!-- Metric type property -->
    <property name="mt" type="Integer" />
    
    <!-- Decomposable/Smart total property -->
    <property name="stl" type="Integer" />
    
    <!-- Is aggregate from base property -->
    <property name="afb" type="Boolean" />
    
    <!-- The metric can be set to smart -->
    <property name="cbs" type="Boolean" />
    
  </definition>
</block>