.mstrmojo-jobtable {
    margin: 5px;
    width: 99%;
    height: auto;
}

.mstrmojo-jobtable td {
    height: auto;
}

.mstrmojo-jobtable .jobDescriptionCol {
    width: 295px;
}

.mstrmojo-jobtable .jobIdCol {
    width: 70px;
}

.mstrmojo-jobtable .jobOwnerCol {
    width: 150px;
}

.mstrmojo-jobtable .jobCreationTimeCol {
    width: 160px;
}

.mstrmojo-jobtable .jobStatusCol {
    width: 100px;
}

.mstrmojo-jobtable .jobRunningTimeCol {
    width: 100px;
}

.mstrmojo-jobtable .jobCheckBox {
    width: 50px;
}

.mstrmojo-job-detail {
    margin-left: 5px;
    margin-top: 5px;
    font-size: 8pt;
    text-align: justify;
    height: 25px;
}

.mstrmojo-jobdetail-expand {
    height: 20px;
    background: url(images/treeExpand.gif) no-repeat left center;
}

.mstrmojo-jobdetail-expand.expanded {
    height: 20px;
    background: url(images/treeCollapse.gif) no-repeat left center;
}

.mstrmojo-jobname-col {
    width: 80%;
}

.mstrmojo-jobdetail-frame {
    margin-top: 3px;
    -moz-border-radius-topright: 5px;
    -moz-border-radius-topleft: 5px;
    -moz-border-radius-bottomright: 5px;
    -moz-border-radius-bottomleft: 5px;
    margin-bottom: 3px;
    height: auto;
}

.mstrmojo-sqlquery-label {
    text-align: left;
    line-height: 15px;
    max-height: 250px;
    overflow: auto;
}

.mstrmojo-jobdetail-panel {
    margin-left: 0px;
    text-align: left;
    margin-right: auto;
}

.mstrmojo-jobdetail-table .detailName {
    font-weight: bold;
    text-align: left;
    width: 15%;
    border-width: 1px;
    border-style: solid;
    border-color: #AAAAAA;
}

.mstrmojo-jobdetail-table .detailValue {
    text-align: left;
    width: 85%;
    border-width: 1px;
    border-style: solid;
    border-color: #AAAAAA;
}